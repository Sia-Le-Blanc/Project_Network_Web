# 서버 설정
PORT=3000
NODE_ENV=development

# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ra_game_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT 설정
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here_minimum_32_characters
JWT_REFRESH_EXPIRE=30d

# 암호화 설정
BCRYPT_ROUNDS=12

# CORS 설정
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 파일 업로드 설정
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# 이메일 설정 (선택사항)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# 외부 API 설정 (선택사항)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
FACEBOOK_APP_ID=your_facebook_app_id
DISCORD_CLIENT_ID=your_discord_oauth_client_id

# 로깅 설정
LOG_LEVEL=info

# Redis 설정 (세션 저장용, 선택사항)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 레이트 리미팅 설정
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 보안 설정
SESSION_SECRET=your_session_secret_key_here_minimum_32_characters

# 개발 전용 설정
DEBUG=true
VERBOSE_LOGGING=true